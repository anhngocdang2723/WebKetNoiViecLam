@model List<WebApp_KetNoiViecLam.Models.Blog>

<section class="blog-section pt-0 pb-100">
    <div class="container">
        <div class="row">
            @foreach (var blogPost in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="~/images/blog/blog-13.jpg" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title">@blogPost.BlogTitle</h5>
                            <p class="card-text">@blogPost.Content</p>
                        </div>
@*                         <div class="card-footer">
                            <small class="text-muted">Posted by: @blogPost.User.UserName</small>
                        </div> *@
                    </div>
                </div>
            }
        </div>
    </div>
</section>
